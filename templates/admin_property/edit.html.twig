{% extends 'admin_base.html.twig' %}

{% block admin_title %}Edit Property{% endblock %}

{% block admin_content %}
<div class="w-full h-full py-6 px-6">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-orange-50 via-amber-50 to-orange-50 rounded-2xl p-8 mb-8 border border-orange-100 shadow-sm">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-6">
            <div>
                <h1 class="text-3xl font-bold bg-gradient-to-r from-orange-600 to-amber-600 bg-clip-text text-transparent flex items-center gap-3 mb-2">
                    <div class="bg-gradient-to-br from-orange-100 to-amber-50 p-3 rounded-xl border border-orange-200">
                        <i class="fa-solid fa-pen-to-square text-orange-600 text-xl"></i>
                    </div>
                    Edit Property
                </h1>
                <p class="text-gray-600 text-sm">Update property information and details</p>
            </div>
        </div>
    </div>

    <!-- Main Form Container -->
    <div class="bg-gradient-to-br from-white to-gray-50 border border-orange-100 rounded-2xl shadow-lg overflow-hidden">
        <div class="p-8">
            {{ include('admin_property/_form.html.twig', {'form': form, 'button_label': 'Update Property'}) }}
            
            <!-- Delete Section -->
            <div class="mt-8 pt-8 border-t-2 border-red-100">
                <h3 class="text-lg font-bold text-red-600 mb-4 flex items-center gap-2">
                    <i class="fa-solid fa-trash-alt"></i> Danger Zone
                </h3>
                {{ include('admin_property/_delete_form.html.twig', {'property': property}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
