{% extends 'admin_base.html.twig' %}

{% block admin_title %}Add New Property{% endblock %}

{% block admin_content %}
<div class="w-full h-full py-6 px-6">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
            <div class="bg-emerald-100 p-3 rounded-xl">
                <i class="fa-solid fa-plus text-emerald-600 text-xl"></i>
            </div>
            Add New Property
        </h1>
        <p class="text-gray-600 mt-2">Create a new property listing in your portfolio</p>
    </div>

    <div class="bg-white border border-gray-200 rounded-2xl shadow-lg overflow-hidden max-w-4xl">
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-800">Property Details</h2>
            <p class="text-gray-600 text-sm mt-1">Fill in all the information about your property</p>
        </div>
        <div class="p-8">
            {{ include('admin_property/_form.html.twig', {'form': form, 'button_label': 'Create Property'}) }}
        </div>
    </div>
</div>
{% endblock %}
