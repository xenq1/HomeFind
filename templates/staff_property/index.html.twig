{% extends 'admin_base.html.twig' %}

{% block admin_title %}Staff Properties{% endblock %}

{% block admin_content %}
<div class="w-full h-full py-6 px-6">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-teal-50 to-cyan-50 rounded-2xl p-8 mb-8 border border-teal-100">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center">
            <div>
                <h1 class="text-3xl font-bold bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent flex items-center gap-3">
                    <div class="bg-gradient-to-br from-teal-100 to-cyan-50 p-3 rounded-xl border border-teal-200">
                        <i class="fa-solid fa-briefcase text-teal-600 text-xl"></i>
                    </div>
                    Staff Properties
                </h1>
                <p class="text-gray-600 mt-2">Manage your property listings</p>
            </div>
            <a href="{{ path('staff_property_new') }}"
               class="mt-4 sm:mt-0 inline-flex items-center bg-gradient-to-r from-teal-600 to-cyan-600 text-white px-6 py-3 rounded-xl hover:shadow-lg transform hover:-translate-y-1 transition font-semibold">
                <i class="fa-solid fa-plus mr-2"></i> Add Property
            </a>
        </div>
    </div>

    <!-- Properties Container -->
    <div class="bg-gradient-to-br from-white to-gray-50 border border-teal-100 rounded-2xl shadow-lg overflow-hidden">
        <div class="p-6">
            {% if app.flashes('success') %}
                {% for message in app.flashes('success') %}
                    <div class="mb-4 p-4 bg-gradient-to-r from-teal-100 to-cyan-100 text-teal-700 rounded-lg border border-teal-200">
                        <i class="fa-solid fa-check-circle mr-2"></i> {{ message }}
                    </div>
                {% endfor %}
            {% endif %}

            {% if properties|length > 0 %}
                <div class="space-y-4">
                    {% for property in properties %}
                        <div class="border border-gray-200 rounded-xl p-6 hover:shadow-md transition">
                            <div class="flex gap-6">
                                <!-- Image -->
                                <div class="w-24 h-24 flex-shrink-0">
                                    {% if property.image %}
                                        <img src="{{ property.image }}" alt="{{ property.name }}" class="w-24 h-24 object-cover rounded-lg shadow-sm">
                                    {% else %}
                                        <div class="w-24 h-24 bg-gray-200 rounded-lg flex items-center justify-center">
                                            <i class="fa-solid fa-image text-gray-400 text-2xl"></i>
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Info -->
                                <div class="flex-1">
                                    <h3 class="text-lg font-semibold text-gray-900">{{ property.name }}</h3>
                                    <p class="text-gray-600 text-sm mt-1">
                                        <i class="fa-solid fa-location-dot mr-1"></i>{{ property.location }}
                                    </p>
                                    <div class="flex gap-4 mt-3 flex-wrap">
                                        <span class="text-sm">
                                            <span class="font-semibold text-teal-600">₱{{ property.price|number_format(2) }}{% if property.listingType == 'for_rent' %}<span class="text-gray-600">/mo</span>{% endif %}</span>
                                        </span>
                                        <span class="text-sm">
                                            <span class="font-semibold text-gray-700">{{ property.area }} m²</span>
                                        </span>
                                        {% if property.status == 'available' %}
                                            <span class="badge bg-green-100 text-green-700 text-xs">
                                                <i class="fa-solid fa-circle-check mr-1"></i> Available
                                            </span>
                                        {% elseif property.status == 'sold' %}
                                            <span class="badge bg-red-100 text-red-700 text-xs">
                                                <i class="fa-solid fa-check-double mr-1"></i> Sold
                                            </span>
                                        {% elseif property.status == 'on rent' %}
                                            <span class="badge bg-blue-100 text-blue-700 text-xs">
                                                <i class="fa-solid fa-key mr-1"></i> On Rent
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="flex gap-3 items-center">
                                    <a href="{{ path('staff_property_show', {'id': property.id}) }}"
                                       class="text-blue-600 hover:text-blue-800 transition" title="View">
                                        <i class="fa-solid fa-eye text-lg"></i>
                                    </a>
                                    <a href="{{ path('staff_property_edit', {'id': property.id}) }}"
                                       class="text-amber-600 hover:text-amber-800 transition" title="Edit">
                                        <i class="fa-solid fa-pen-to-square text-lg"></i>
                                    </a>
                                    <form method="POST" action="{{ path('staff_property_delete', {'id': property.id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this property?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-800 transition" title="Delete">
                                            <i class="fa-solid fa-trash-alt text-lg"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <i class="fa-solid fa-inbox text-gray-300 text-4xl mb-4"></i>
                    <p class="text-gray-500">No properties found. <a href="{{ path('staff_property_new') }}" class="text-teal-600 hover:underline">Create one now</a></p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
