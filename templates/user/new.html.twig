{% extends 'admin_base.html.twig' %}

{% block admin_title %}Add New User{% endblock %}

{% block admin_content %}
<div class="w-full h-full py-6 px-6">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-emerald-50 to-green-50 rounded-2xl p-8 mb-8 border border-emerald-100">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-emerald-600 to-green-600 bg-clip-text text-transparent flex items-center gap-3">
            <div class="bg-gradient-to-br from-emerald-100 to-green-50 p-3 rounded-xl border border-emerald-200">
                <i class="fa-solid fa-user-plus text-emerald-600 text-xl"></i>
            </div>
            Create New User
        </h1>
        <p class="text-gray-600 mt-2">Add a new user account to the system</p>
    </div>

    <!-- Main Container -->
    <div class="bg-gradient-to-br from-white to-gray-50 border border-emerald-100 rounded-2xl shadow-lg overflow-hidden max-w-2xl">
        <div class="p-8">
            {% if form.vars.errors|length > 0 %}
                <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    <strong>Form errors:</strong>
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}

                <!-- Account Details Section -->
                <div>
                    <h3 class="text-sm font-semibold text-gray-700 mb-4 flex items-center gap-2">
                        <i class="fa-solid fa-user text-emerald-600"></i>
                        Account Details
                    </h3>
                    <div>
                        {{ form_label(form.username, 'Username', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-2' } }) }}
                        {{ form_widget(form.username, { 'attr': {'class': 'w-full border-2 border-gray-200 rounded-xl px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition', 'placeholder': 'Enter username'} }) }}
                        {% if form.username.vars.errors %}
                            <div class="mt-2 text-sm text-red-600 space-y-1">
                                {% for error in form.username.vars.errors %}
                                    <div>{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <hr class="border-gray-200">

                <!-- Password Section -->
                <div>
                    <h3 class="text-sm font-semibold text-gray-700 mb-4 flex items-center gap-2">
                        <i class="fa-solid fa-lock text-emerald-600"></i>
                        Password
                    </h3>
                    <div>
                        {{ form_label(form.plainPassword, 'Password', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-2' } }) }}
                        {{ form_widget(form.plainPassword, { 'attr': {'class': 'w-full border-2 border-gray-200 rounded-xl px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition', 'placeholder': 'Enter password (min 6 characters)'} }) }}
                        {% if form.plainPassword.vars.errors %}
                            <div class="mt-2 text-sm text-red-600 space-y-1">
                                {% for error in form.plainPassword.vars.errors %}
                                    <div>{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <hr class="border-gray-200">

                <!-- Actions -->
                <div class="flex gap-3 pt-4">
                    <button type="submit" class="inline-flex items-center bg-gradient-to-r from-emerald-600 to-green-600 text-white px-8 py-3 rounded-xl hover:shadow-lg transform hover:-translate-y-1 transition font-semibold">
                        <i class="fa-solid fa-plus mr-2"></i> Create User
                    </button>
                    <a href="{{ path('app_user_index') }}" class="inline-flex items-center bg-gray-200 text-gray-800 px-8 py-3 rounded-xl hover:bg-gray-300 transition font-semibold">
                        <i class="fa-solid fa-arrow-left mr-2"></i> Cancel
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
