{% extends 'base.html.twig' %}

{% block title %}Home | HomeFind - Find Your Perfect Home{% endblock %}

{% block body %}
<div class="bg-gradient-to-r from-emerald-500 to-emerald-600 text-white py-20 px-6">
    <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-4">Welcome to HomeFind</h1>
        <p class="text-xl text-emerald-50 mb-8">
            Discover your perfect home or property investment. Browse listings, connect with agents, and make your dreams a reality.
        </p>
        <div class="flex gap-4 justify-center">
            <a href="{{ path('public_property_index') }}" class="bg-white text-emerald-600 px-8 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition shadow-lg">
                <i class="fa-solid fa-search mr-2"></i> Browse Properties
            </a>
            {% if not app.user %}
                <a href="{{ path('app_register') }}" class="bg-emerald-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-emerald-800 transition shadow-lg">
                    <i class="fa-solid fa-user-plus mr-2"></i> Create Account
                </a>
            {% endif %}
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="max-w-6xl mx-auto py-20 px-6">
    <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">Why Choose HomeFind?</h2>
        <p class="text-gray-600 text-lg">Everything you need to find your perfect property</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="text-emerald-600 text-4xl mb-4">
                <i class="fa-solid fa-house"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Wide Selection</h3>
            <p class="text-gray-600">
                Browse through hundreds of properties including houses, apartments, condos, and commercial spaces.
            </p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="text-emerald-600 text-4xl mb-4">
                <i class="fa-solid fa-filter"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Smart Filters</h3>
            <p class="text-gray-600">
                Filter properties by type, location, price range, and listing status. Find exactly what you're looking for.
            </p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="text-emerald-600 text-4xl mb-4">
                <i class="fa-solid fa-bolt"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Quick & Easy</h3>
            <p class="text-gray-600">
                Simple registration, quick property search, and straightforward avail process to secure your property.
            </p>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="bg-gray-100 py-16 px-6">
    <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Ready to Find Your Dream Home?</h2>
        <p class="text-gray-600 mb-8">
            Explore thousands of properties available for sale and rent in your area.
        </p>
        <a href="{{ path('public_property_index') }}" class="inline-block bg-emerald-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-emerald-700 transition shadow-lg">
            Start Browsing Now
        </a>
    </div>
</div>

<!-- Stats Section -->
<div class="max-w-6xl mx-auto py-20 px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div>
            <div class="text-4xl font-bold text-emerald-600 mb-2">500+</div>
            <p class="text-gray-600">Properties Listed</p>
        </div>
        <div>
            <div class="text-4xl font-bold text-emerald-600 mb-2">10K+</div>
            <p class="text-gray-600">Happy Users</p>
        </div>
        <div>
            <div class="text-4xl font-bold text-emerald-600 mb-2">24/7</div>
            <p class="text-gray-600">Support Available</p>
        </div>
    </div>
</div>
{% endblock %}
