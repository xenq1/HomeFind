{% extends 'base.html.twig' %}

{% block title %}Sign Up - HomeFind{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-emerald-50 to-blue-50 flex items-center justify-center px-4 py-12">
    <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                <i class="fa-solid fa-home text-emerald-600 mr-2"></i>HomeFind
            </h1>
            <h2 class="text-2xl font-semibold text-gray-700">Sign Up</h2>
            <p class="text-gray-600 text-sm mt-2">Join us to find your perfect home</p>
        </div>

        {% if registrationForm.vars.errors|length > 0 %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-4' } }) }}
            
            <div>
                {{ form_label(registrationForm.username, 'Username', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-2' } }) }}
                {{ form_widget(registrationForm.username, { 'attr': { 'class': 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500' } }) }}
                {% if registrationForm.username.vars.errors|length > 0 %}
                    <div class="text-red-600 text-sm mt-1">
                        {{ form_errors(registrationForm.username) }}
                    </div>
                {% endif %}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Password', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-2' } }) }}
                {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500', 'autocomplete': 'new-password' } }) }}
                {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                    <div class="text-red-600 text-sm mt-1">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
                <p class="text-gray-500 text-xs mt-1">Minimum 6 characters</p>
            </div>

            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'w-4 h-4 text-emerald-600 rounded focus:ring-2 focus:ring-emerald-500' } }) }}
                {{ form_label(registrationForm.agreeTerms, 'I agree to the Terms and Conditions', { 'label_attr': { 'class': 'ml-2 block text-sm text-gray-700' } }) }}
                {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                    <div class="text-red-600 text-sm mt-1">
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                {% endif %}
            </div>

            <button type="submit" class="w-full bg-emerald-600 text-white font-semibold px-4 py-2 rounded-lg hover:bg-emerald-700 transition mt-6">
                <i class="fa-solid fa-user-plus mr-2"></i>Sign Up
            </button>

        {{ form_end(registrationForm) }}

        <div class="text-center mt-6">
            <p class="text-gray-600 text-sm">
                Already have an account? 
                <a href="{{ path('app_login') }}" class="text-emerald-600 hover:text-emerald-700 font-semibold">Sign in</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
